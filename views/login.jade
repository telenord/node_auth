extends layout

block content
  h2.page-header Login
  p Please login below
  form(method='post', action='/users/login')
    .form-group
      label Username
      input.form-control(name='name', type='text', placeholder='Enter username')
    .form-group
      label Password
      input.form-control(name='password', type='password', placeholder='Password')
    button.btn.btn-primary(type='submit') Login
